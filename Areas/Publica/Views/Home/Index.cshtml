@using TiendaOnline.Areas.Publica.Models
@model HomeViewModel

@{
    ViewData["Titulo"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estiloHome.css" />
}


<!-- Seccion de arriba -->
<div class="container-fluid">
    <div class="row">
        <div class ="card w-auto">
                <div class="card-header display-1 text-center"
                 style="background-url('https://cdn.pixabay.com/photo/2017/03/27/14/59/man-2179243_1280.jpg')
                background-size: cover; background-position: center; color: white; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5); padding: 60px;">
                    @Model.Titulo
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                        @Model.Descripcion
                    </p>
                </div>
         </div>
     </div>
</div>



<!-- EJEMPLO DE LO QUE BUSCO-->

<section class="py-5 bg-light text-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 text-md-start">
                <h1 class="display-4 fw-bold text-dark">Summer's Coming...</h1>
                <p class="lead text-muted">
                    We started with humble beginnings – selling out of our basement and frantically shipping orders as soon as we wake up.
                </p>
                <a href="#" class="btn btn-dark btn-lg mt-3">SHOP NOW</a>
            </div>
            <div class="col-md-6">
                <img src="ruta-a-tu-imagen.jpg" alt="Summer promo" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>


