@using TiendaOnline.Entidades

@{
    ViewBag.Title = "Detalle del Producto";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagenUrl" alt="@Model.Nombre" class="img-fluid rounded shadow" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Nombre</h2>
            <p class="text-muted">@Model.Descripcion</p>
            <p><strong>Color:</strong> @Model.Color</p>
            <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
            <p><strong>Categoría:</strong> @Model.CategoriaNombre</p>
            <p><small>Fecha de creación: @Model.FechaCreacion.ToShortDateString()</small></p>

            <a href="@Url.Action("Buscar", "Productos")" class="btn btn-secondary mt-3">Volver al catálogo</a>
            <button class="btn btn-primary mt-3">Añadir al carrito</button> <!--TODO CREAR CARRITO Y LOGICA-->
        </div>
    </div>
</div>
